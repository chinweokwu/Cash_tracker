<!DOCTYPE html>
<html>
  <head>
    <title>CashTracker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <div class="head my-3">
        <nav class="navbar navbar-expand-lg navbar-light head_custom-nav">
          <div class="navbar-header">
            <%= link_to "Cash Tracker", root_path, class: "mx-2 text-primary" %>
          </div>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
            <span><i class="fas fa-bars"></i></span> 
          </button>
          <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <% if logged_in? %>
              <ul class="nav navbar-right ">
                <li><%= link_to current_user.name, user_path(User.find(session[:user_id])), class:"navbar-item" %></li>
                <li><%= link_to "Log out", logout_path, class: "mx-2", method: :delete %></li> 
              </ul>
            <% else %>
              <ul class= "nav navbar-right">
              <li><%= link_to "Log in", login_path, class: "mx-2" %></li> 
              <li><%= link_to "Sign up", signup_path, class: "mx-2" %></li>
              </ul>
            <% end %>      
           </div>
        </nav>
      </div>
      </div>
    <%= yield %>
  </body>
</html>

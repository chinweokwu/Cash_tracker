
  <div class="container session_card">
    <p id="notice" class="text-center text-success"><%= notice %></p>
    <% @users.each do |user| %>
      <div class="card" >
        <div class="d-flex justify-content-around">
            <div class="display-4">
                <i class="fas fa-user user_profile"></i>
            </div>
            
            <div class="d-block">
                <div class="card-body">
                    <h5 class="card-title"> <%= user.name %></h5>
                </div>
            </div>
            <p class="card-text mt-4"> Total Amt: $ <%= user_total_trans(user, :amount) %></p>
        </div>
      </div>     
      <% end %>
  </div>
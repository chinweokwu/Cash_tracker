<div class="container">
  <div class="mt-5 pt-5 d-flex justify-content-between">
    <div class="">
      total amount of transaction :
    </div>
    <div class="actual_total_amount">
      $ <%= @total_exp %>
    </div>
  </div>
</div>

<p id="notice" class="text-center text-success"><%= notice %></p>
<div class="container bcontent mt-5">
  <div class="d-flex justify-content-between mb-3">
<h3 class=" text-primary">All Transactions</h3>
<%= link_to '  New Transaction', new_transaction_path, class:"btn btn-primary text-center" %>
  </div>

    <% @transaction.each do |transaction| %>
    <div class="card" >
      <div class="d-flex justify-content-around">
          <div class="mt-4">
           <%= all_trans_icon(transaction)%>
          </div>
          <div class="d-block">
              <div class="card-body">
                  <h5 class="card-title"> <%= transaction.name %></h5>
                      <%= all_trans_name(transaction) %>
                  <span class="text-muted l-h"><%= transaction.created_at.strftime("%d-%b-%Y") %></span>
                  <%= link_to 'Edit', edit_transaction_path(transaction) %>
                  <%= link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' } %>
              </div>
          </div>
          <p class="card-text mt-5"> $ <%= transaction.amount %></p>
      </div>
    </div>     
    <% end %>
</div>
